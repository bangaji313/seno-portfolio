    <script>
        // --- LOGIC MODAL PROJECT ---
        const projectModal = document.getElementById('project-modal');
        const modalCloseBtn = document.getElementById('modal-close');
        const modalTitle = document.getElementById('modal-title');
        const modalDesc = document.getElementById('modal-desc');
        const modalTags = document.getElementById('modal-tags');
        const modalGithub = document.getElementById('modal-github');
        const modalMedia = document.getElementById('modal-media');
        
        const projectTriggers = document.querySelectorAll('.project-card-trigger');

        projectTriggers.forEach(card => {
            card.addEventListener('click', () => {
                const title = card.getAttribute('data-title');
                const desc = card.getAttribute('data-description');
                const github = card.getAttribute('data-github');
                const tags = card.getAttribute('data-tags').split(',');
                const image = card.getAttribute('data-image');
                const video = card.getAttribute('data-video');

                // Isi Konten Modal
                modalTitle.textContent = title;
                modalDesc.textContent = desc;
                modalGithub.href = github;
                
                // Render Tags
                modalTags.innerHTML = tags.map(tag => 
                    `<span class="px-3 py-1 text-xs font-bold text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900/30 dark:text-blue-300">${tag}</span>`
                ).join('');

                // Render Media (Gambar/Video)
                modalMedia.innerHTML = ''; // Reset dulu
                modalMedia.classList.add('hidden');

                // --- KODE BARU (TAMPILKAN SEMUA YANG ADA) ---
                let mediaContent = '';

                // 1. Cek Image
                if (image) {
                    mediaContent += `<img src="${image}" class="w-full h-auto object-cover rounded-xl mb-4 shadow-md" alt="Project Preview">`;
                }

                // 2. Cek Video
                if (video) {
                    mediaContent += `
                        <div class="relative w-full pt-[56.25%] rounded-xl overflow-hidden shadow-md bg-black">
                            <iframe 
                                class="absolute top-0 left-0 w-full h-full"
                                src="${video}" 
                                frameborder="0" 
                                allow="autoplay; encrypted-media" 
                                allowfullscreen>
                            </iframe>
                        </div>
                    `;
                }

                // 3. Masukkan ke HTML
                if (mediaContent) {
                    modalMedia.innerHTML = mediaContent;
                    modalMedia.classList.remove('hidden');
                } else {
                    modalMedia.innerHTML = '';
                    modalMedia.classList.add('hidden');
                }

                // Tampilkan Modal
                projectModal.classList.remove('hidden');
                setTimeout(() => {
                    projectModal.classList.remove('opacity-0');
                }, 10);
            });
        });

        // Close Modal Project
        const closeProjectModal = () => {
            projectModal.classList.add('opacity-0');
            setTimeout(() => {
                projectModal.classList.add('hidden');
                // Hentikan video kalau ada (biar suara gak bocor pas ditutup)
                modalMedia.innerHTML = ''; 
            }, 300);
        };

        if(modalCloseBtn) modalCloseBtn.addEventListener('click', closeProjectModal);
        
        // --- LOGIC LIGHTBOX (GALLERY) ---
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const lbCloseBtn = document.getElementById('lightbox-close');
        const lbTriggers = document.querySelectorAll('.lightbox-trigger');

        lbTriggers.forEach(img => {
            img.addEventListener('click', (e) => {
                e.stopPropagation(); // Biar gak bentrok sama klik kartu project
                const src = e.target.getAttribute('src');
                lightboxImg.setAttribute('src', src);
                lightbox.classList.remove('hidden');
                setTimeout(() => {
                    lightbox.classList.remove('opacity-0');
                    lightboxImg.classList.remove('scale-95');
                    lightboxImg.classList.add('scale-100');
                }, 10);
            });
        });

        const closeLightbox = () => {
            lightbox.classList.add('opacity-0');
            lightboxImg.classList.remove('scale-100');
            lightboxImg.classList.add('scale-95');
            setTimeout(() => {
                lightbox.classList.add('hidden');
                lightboxImg.setAttribute('src', '');
            }, 300);
        };

        if (lbCloseBtn) lbCloseBtn.addEventListener('click', closeLightbox);
        
        // Global Close (Klik di luar / ESC)
        window.addEventListener('click', (e) => {
            if (e.target === projectModal) closeProjectModal();
            if (e.target === lightbox) closeLightbox();
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                if (!projectModal.classList.contains('hidden')) closeProjectModal();
                if (!lightbox.classList.contains('hidden')) closeLightbox();
            }
        });
    </script>


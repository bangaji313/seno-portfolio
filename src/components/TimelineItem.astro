---
// src/components/TimelineItem.astro
const { year, title, company, description, images } = Astro.props;
---

<div class="relative flex-none w-[85vw] md:w-[600px] snap-center bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 md:p-8 rounded-2xl shadow-sm hover:shadow-md transition-all">
    
    <div class="flex flex-col h-full justify-between">
        <div>
            <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 text-xs font-bold text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900/50 dark:text-blue-300">
                    {year}
                </span>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white leading-tight">
                    {title}
                </h3>
            </div>
            
            <p class="text-sm font-medium text-blue-600 dark:text-blue-400 mb-4">
                {company}
            </p>

            <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-6">
                {description}
            </p>
        </div>

        {images && images.length > 0 && (
            <div class="grid grid-cols-2 gap-3 mt-auto">
                {images.map((imgSrc) => (
                    <div class="relative group overflow-hidden rounded-lg cursor-zoom-in h-32 border border-gray-100 dark:border-gray-700">
                        <img 
                            src={imgSrc} 
                            alt={title} 
                            class="lightbox-trigger w-full h-full object-cover transition duration-500 group-hover:scale-110"
                            loading="lazy"
                        />
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition flex items-center justify-center pointer-events-none">
                            <span class="opacity-0 group-hover:opacity-100 text-white text-2xl transition">üîç</span>
                        </div>
                    </div>
                ))}
            </div>
        )}
    </div>
</div>
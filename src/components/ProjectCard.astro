---
// src/components/ProjectCard.astro
const { title, description, detailedDescription, tags, link, github, demoImage, demoVideo } = Astro.props;
---

<div 
    class="project-card-trigger bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer group h-full flex flex-col"
    data-title={title}
    data-description={detailedDescription}
    data-github={github}
    data-tags={tags}
    data-image={demoImage}
    data-video={demoVideo}
>
    <div class="flex justify-between items-start mb-4">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-1">
            {title}
        </h3>
        <div class="text-gray-400 group-hover:text-blue-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5 19.5 4.5m0 0H6m13.5 0v13.5" />
            </svg>
        </div>
    </div>

    <p class="text-gray-600 dark:text-gray-400 mb-6 text-sm leading-relaxed line-clamp-3 flex-grow">
        {description}
    </p>

    <div class="flex flex-wrap gap-2 mt-auto">
        {tags.map((tag) => (
            <span class="px-2 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded-md dark:bg-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600">
                {tag}
            </span>
        ))}
    </div>
</div>
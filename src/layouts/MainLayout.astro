---
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/images/profile/logo-seno.png" />
		
        <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicon/devicon@latest/devicon.min.css" />
          
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Seno Portfolio</title>
        
        <script is:inline>
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
	</head>
	<body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 antialiased flex flex-col min-h-screen">
        <nav class="fixed top-0 w-full z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800 transition-colors duration-300">
            <div class="container mx-auto px-4 py-4 flex justify-between items-center">
                <a href="/" class="flex items-center gap-2 group">
                    <img 
                        src="/images/profile/logo-seno.png" 
                        alt="Seno Logo" 
                        class="w-8 h-8 md:w-10 md:h-10 object-contain transition-transform duration-300 group-hover:scale-110"
                    />
                    <span class="text-xl md:text-2xl font-bold font-mono tracking-tighter text-gray-900 dark:text-white">
                        Seno.
                    </span>
                </a>
                
                <button id="theme-toggle" class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-all focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <span class="dark:hidden">ðŸŒž</span>
                    <span class="hidden dark:inline">ðŸŒ™</span>
                </button>
            </div>
        </nav>

        <main class="flex-grow pt-24 pb-12">
            <slot /> 
        </main>

        <footer class="py-12 text-center text-sm border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 mt-auto">
            <div class="flex flex-col items-center justify-center gap-4">
                <img 
                    src="/images/profile/logo-seno.png" 
                    alt="Seno Logo" 
                    class="w-12 h-12 opacity-50 grayscale hover:grayscale-0 hover:opacity-100 transition duration-500"
                />
                <p class="text-gray-500 dark:text-gray-400">
                    &copy; 2025 Maulana Seno Aji Y. <br class="md:hidden" /> Built with Astro & Tailwind.
                </p>
            </div>
        </footer>

        <script>
            const themeToggle = document.getElementById('theme-toggle');
            
            themeToggle.addEventListener('click', () => {
                const html = document.documentElement;
                if (html.classList.contains('dark')) {
                    html.classList.remove('dark');
                    localStorage.theme = 'light';
                } else {
                    html.classList.add('dark');
                    localStorage.theme = 'dark';
                }
            });
        </script>
	</body>
</html>